<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>

<h2>Users</h2>

<table class="table">
	<thead class="thead thead-default">
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th></th>
		</tr>
	</thead>

		<tbody>
			<% User.all.each do |user| %>
			<tr>
				<td><%= user.name %></td>
				<td><%= user.email %></td>
				<td><%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post, class: "btn btn-success" %></td>
			</tr>
			<% end %>
		</tbody>
</table>

	<%= link_to "Sign Up", new_user_path, class: "btn btn-primary" %>
	<%= link_to "Log In", new_session_path, class: "btn btn-primary" %>
	<%= link_to "Log Out", logout_path, class: "btn btn-primary" %>

